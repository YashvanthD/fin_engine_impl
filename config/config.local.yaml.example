# =============================================================================
# Local Configuration Example
# =============================================================================
# Copy this file to config.local.yaml and customize for your local environment.
# This file is git-ignored and should contain your local secrets.
#
# cp config.local.yaml.example config.local.yaml
# =============================================================================

# Enable debug mode for local development
app:
  debug: true
  env: development

# Set your JWT secret for local development
security:
  jwt:
    secret: "your-local-dev-secret-key-change-in-production"

  # You can override the master password for local testing
  master_admin_password: "local-dev-password"

# Local MongoDB connection (if different from default)
# database:
#   mongo_uri: "mongodb://localhost:27017"

# Local CORS settings (allow all for development)
cors:
  origins: "*"

# Logging configuration
logging:
  # Log level: DEBUG, INFO, WARNING, ERROR
  level: "INFO"
  # Enable verbose debug logging
  debug: false
  # Log format pattern (or use individual options below)
  # Minimal: "%(message)s"
  # With level: "%(levelname)s - %(message)s"
  # Full: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  pattern: "%(levelname)s - %(message)s"
  # Individual options (used if pattern is "%(message)s")
  include_datetime: false
  include_name: false
  include_level: true
  date_format: "%H:%M:%S"

